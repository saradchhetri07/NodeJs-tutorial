<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <%  if(errorMessage.length>0) {%>
        <div class="user-message user-message--error"><%= errorMessage[0].msg %></div>
        <% } %>

        <form class="product-form" <% if(editing || hasError){ %> action="/admin/edit-product" <%}else{%>
            action="/admin/add-product" <% } %> method="POST" enctype="multipart/form-data">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title"
                    value="<% if(editing || hasError){ %> <%= product.title %> <%} %> " class="<%= validationErrors.find((e)=>{
                        return e.path === 'title'
                        }) ? 'invalid': '' %>">
            </div>
            <!-- <div class="form-control">
                <label for="imageUrl">Image URL</label>
                <input type="text" name="imageUrl" id="imageUrl"
                    value="<% if(editing || hasError){ %> <%= product.imageUrl %> <%} %> " class="<%= validationErrors.find((e)=>{
                        return e.path === 'imageUrl'
                        }) ? 'invalid': '' %>">
            </div> -->


            <div class="form-control">
                <label for="image">Image URL</label>
                <input type="file" name="image" id="image">
            </div>


            <div class="form-control">
                <label for="price">Price</label>
                <input type="number" name="price" id="price" step="0.01"
                    value="<% if(editing || hasError){ %> <%= product.price %> <%} %> " class="<%= validationErrors.find((e)=>{
                        return e.path === 'price'
                        }) ? 'invalid': '' %>">
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea class="<%= validationErrors.find((e)=>{
                    return e.path === 'description'
                    }) ? 'invalid': '' %>" name="description" id="description"
                    rows="5"><% if(editing || hasError ){ %> <%= product.description %> <%} %></textarea>
            </div>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <% if(editing || hasError){ %>
            <input type="hidden" name="productId" value="<%= product._id %>">
            <%}%>
            <button class="btn" type="submit">
                <% if(editing || hasError ){ %> Update Product<% }else{ %> Add Product <%}%>
            </button>
        </form>
    </main>
    <%- include('../includes/end.ejs') %>